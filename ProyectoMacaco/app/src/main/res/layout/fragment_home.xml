<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/bananaCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bananas: 0"
            android:textStyle="bold" />

        <!-- Chimpanzee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/chimpImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/monkey_left" />

            <TextView
                android:id="@+id/chimpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chimpanzee" />

            <TextView
                android:id="@+id/chimpCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cost: 100 Bananas"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/chimpActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Equip" />
        </LinearLayout>

        <!-- Gorilla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/gorillaImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/monkey_left" />

            <TextView
                android:id="@+id/gorillaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gorilla" />

            <TextView
                android:id="@+id/gorillaCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cost: 200 Bananas"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/gorillaActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Equip" />
        </LinearLayout>

        <!-- Orangutan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/orangutanImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/monkey_left" />

            <TextView
                android:id="@+id/orangutanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Orangutan" />

            <TextView
                android:id="@+id/orangutanCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cost: 600 Bananas"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/orangutanActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Equip" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>